<div class="container">
    <h1 class="text-center">The Original 31 Teams</h1>
    <p class="text-center">
      <a href="/nhl">Favorites</a>
    </p>

    <% nhlTeams.forEach(function(nhlTeam) { %>
        <div class="well">                       
          <h2><%= nhlTeam.name %></h2>
          <form method="POST" action="/nhl">  
            <input hidden type="text" name="name" value="<%= nhlTeam.name %>">
            <button class="btn btn-primary" type="submit">Add to Favorite Team</button>
          </form>
        </div>
      <% }); %>
    </div>